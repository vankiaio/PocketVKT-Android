<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog_confirm"
        android:orientation="vertical">

        <com.oraclechain.pocketvkt.view.OvalImageView
            android:id="@+id/advertising_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_152"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/go_look"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_42"
            android:layout_margin="@dimen/dimens_20"
            android:background="@color/button_blue"
            android:text="@string/go_look"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_15"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/finish"
        android:layout_width="@dimen/dimens_50"
        android:layout_height="@dimen/dimens_50"
        android:layout_below="@+id/ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimens_30"
        android:scaleType="center"
        android:src="@mipmap/close"/>


</RelativeLayout>