<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/color_bg_main"
    android:orientation="vertical"
    tools:context="com.oraclechain.pocketvkt.modules.unstake.UnStakeActivity">

    <include layout="@layout/title_project"/>

    <LinearLayout
        style="?attr/item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_20"
        android:layout_marginRight="@dimen/dimens_20"
        android:layout_marginTop="@dimen/dimens_10"
        android:orientation="vertical"
        android:padding="@dimen/dimens_20">

        <TextView
            style="?attr/text_one_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赎回CPU额度   "
            android:textSize="@dimen/dimens_14"/>

        <TextView
            android:id="@+id/unstark_cpu"
            style="?attr/text_one_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/dimens_13"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10"
            android:src="@mipmap/unstark_seekbar"/>
    </LinearLayout>

    <LinearLayout
        style="?attr/item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_20"
        android:layout_marginRight="@dimen/dimens_20"
        android:layout_marginTop="@dimen/dimens_10"
        android:orientation="vertical"
        android:padding="@dimen/dimens_20">

        <TextView
            style="?attr/text_one_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赎回net额度   "
            android:textSize="@dimen/dimens_14"/>

        <TextView
            android:id="@+id/unstark_net"
            style="?attr/text_one_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/dimens_13"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10"
            android:src="@mipmap/unstark_seekbar"/>
    </LinearLayout>


    <Button
        android:id="@+id/go_unstark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_42"
        android:layout_marginLeft="@dimen/dimens_20"
        android:layout_marginRight="@dimen/dimens_20"
        android:layout_marginTop="@dimen/dimens_20"
        android:background="@color/blue_button"
        android:text="确认赎回"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens_16"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_10"
        android:gravity="left"
        android:lineSpacingExtra="@dimen/dimens_5"
        android:paddingLeft="@dimen/dimens_20"
        android:paddingRight="@dimen/dimens_20"
        android:text="@string/unstake_info"
        android:textColor="#FF999999"
        android:textSize="@dimen/dimens_13"
        />
</LinearLayout>
