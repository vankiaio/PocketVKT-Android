<?xml version="1.0" encoding="utf-8"?>
<com.vankiachain.pocketvkt.view.swiperecycle.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/right_one"
            android:layout_width="@dimen/dimens_70"
            android:layout_height="match_parent"
            android:background="#FFFABB17"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/right_one"
            style="?attr/text_one_style"
            android:textSize="@dimen/dimens_14"/>

    </LinearLayout>


    <include layout="@layout/swipe_content"/>


</com.vankiachain.pocketvkt.view.swiperecycle.SwipeItemLayout>