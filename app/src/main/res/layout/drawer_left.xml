<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/user_wallet_code"
                    android:layout_width="@dimen/dimens_40"
                    android:layout_height="@dimen/dimens_40"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dimens_15"
                    android:src="@mipmap/user_wallet_code"/>

                <com.vankiachain.pocketvkt.view.RoundImageView
                    android:id="@+id/user_img"
                    android:layout_width="@dimen/dimens_60"
                    android:layout_height="@dimen/dimens_60"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimens_80"
                    app:shape_type="round"
                    android:src="@mipmap/ic_launcher_round"/>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimens_10"
                    android:text="@string/app_name"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/dimens_16"/>

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_name"
                    android:layout_marginTop="@dimen/dimens_40"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wallet_management"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimens_40"
                        android:clickable="true"
                        android:drawableTop="@mipmap/wallet_management"
                        android:gravity="center"
                        android:text="@string/wallet_management"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/dimens_14"/>

                    <View
                        android:layout_width="@dimen/dimens_line_cash"
                        android:layout_height="@dimen/dimens_50"
                        android:background="@color/line"/>

                    <TextView
                        android:id="@+id/transaction_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimens_40"
                        android:clickable="true"
                        android:drawableTop="@mipmap/transaction_history"
                        android:gravity="center"
                        android:text="@string/transaction_history"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/dimens_14"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll"
                    android:layout_marginTop="@dimen/dimens_40"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimens_35">

                    <TextView
                        android:id="@+id/candy_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimens_40"
                        android:layout_marginBottom="@dimen/dimens_10"
                        android:clickable="true"
                        android:drawableLeft="@mipmap/message_center"
                        android:drawablePadding="@dimen/dimens_20"
                        android:drawableRight="@mipmap/black_box_hot"
                        android:gravity="left|center_vertical"
                        android:text="@string/candy_integral"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/dimens_14"/>

                    <TextView
                        android:id="@+id/node_vote"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimens_40"
                        android:layout_marginBottom="@dimen/dimens_10"
                        android:clickable="true"
                        android:drawableLeft="@mipmap/node_vote"
                        android:drawablePadding="@dimen/dimens_20"
                        android:gravity="left|center_vertical"
                        android:text="@string/node_vote"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/dimens_14"/>

                    <TextView
                        android:id="@+id/message_center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimens_40"
                        android:layout_marginBottom="@dimen/dimens_10"
                        android:clickable="true"
                        android:drawableLeft="@mipmap/message_center"
                        android:drawablePadding="@dimen/dimens_20"
                        android:gravity="left|center_vertical"
                        android:text="@string/message_center"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/dimens_14"/>


                    <TextView
                        android:id="@+id/system_settings"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimens_40"
                        android:layout_marginBottom="@dimen/dimens_10"
                        android:clickable="true"
                        android:drawableLeft="@mipmap/system_settings"
                        android:drawablePadding="@dimen/dimens_20"
                        android:gravity="left|center_vertical"
                        android:text="@string/system_settings"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/dimens_14"/>

                    <TextView
                        android:id="@+id/app_update"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimens_40"
                        android:layout_marginBottom="@dimen/dimens_10"
                        android:clickable="true"
                        android:drawableLeft="@mipmap/app_update"
                        android:drawablePadding="@dimen/dimens_20"
                        android:gravity="left|center_vertical"
                        android:text="@string/app_update"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/dimens_14"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/logout_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_40"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dimens_15"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/logout_wallet"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/dimens_14"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
