<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/color_bg_main"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.vankiachain.pocketvkt.modules.news.newsdetails.WebNewsDetailsActivity">

    <include layout="@layout/title_project"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_2"
        android:progressDrawable="@drawable/progressbay_bg"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/rich_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.vankiachain.pocketvkt.view.webview.BaseWebView
        android:id="@+id/web_news_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</LinearLayout>
