<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.vankiachain.pocketvkt.modules.seach.SeachActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimens_5"
        android:layout_height="@dimen/dimens_40"
        android:layout_marginLeft="@dimen/dimens_20"
        android:layout_marginRight="@dimen/dimens_20"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_30"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/seach_cancel"
            android:background="@drawable/seach_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimens_10"
            android:paddingRight="@dimen/dimens_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/seach"/>

            <com.vankiachain.pocketvkt.view.ClearEditText
                android:id="@+id/edt_seach"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimens_10"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/seach"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColor="@color/txt_color"
                android:textColorHint="@color/gray_color"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="@dimen/dimens_14"/>
        </LinearLayout>

        <TextView
            android:id="@+id/seach_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimens_10"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="@string/seach_cancel"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_13"/>
    </RelativeLayout>

</RelativeLayout>
